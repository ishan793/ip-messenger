class IITGNPerson(object):
    nextIdNum = 0
    def __init__(self,name):
        self.idNum = IITGNPerson.nextIdNum
        IITGNPerson.nextIdNum+=1

s1=IITGNPerson('Raj')
print s1.idNum
print IITGNPerson.nextIdNum
print s1.nextIdNum

s2=IITGNPerson('Nandan')
print s1.idNum
print s2.idNum
print IITGNPerson.nextIdNum
print s1.nextIdNum
print s2.nextIdNum

